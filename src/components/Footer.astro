---
import "../styles/global.css";
import {languages} from "../i18n/ui";
import {getRelativeLocaleUrl} from "astro:i18n";
---

<footer class="bg-gray-100 absolute bottom-0 left-0 w-screen">
    <div class="px-5 py-5 md:px-10 md:py-10 max-w-[1300px] mx-auto">
        <ul>
            {Object.entries(languages).map(([lang, label]) => (
                    <li>
                        <a href={getRelativeLocaleUrl(lang)}>{label}</a>
                    </li>
            ))}
        </ul>
    </div>
</footer>
