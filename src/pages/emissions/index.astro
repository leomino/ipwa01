---
import "../../styles/global.css";
import data from "../../data/emissions.json";
import Layout from "../../layouts/Layout.astro"
---

<Layout>
    <main class="flex flex-col gap-8">
        <div class="flex flex-col gap-2">
            <h1 class="text-6xl font-bold">CO2-Emissionen</h1>
            <h2 class="text-lg font-medium opacity-60">Daten und Fakten.</h2>
        </div>
        <article class="flex flex-col gap-8">
            <label for="search" class="hidden">Textsuche nach einem Land oder Unternehmen</label>
            <input type="text" id="search" placeholder="Suche nach einem Land oder Unternehmen..."
                   class="w-full rounded-xl border-2 border-gray-300 px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-200 max-w-1/2"
            />
            <table class="min-w-full border-none text-left text-sm">
                <thead>
                <tr>
                    <th class="px-4 py-2 font-medium">Land</th>
                    <th class="px-4 py-2 font-medium">Verantwortliches Unternehmen</th>
                    <th class="px-4 py-2 font-medium">COâ‚‚ Emissionen (in Tonnen)</th>
                    <th class="px-4 py-2 font-medium">Wobei werden die Emissionen erzeugt?</th>
                </tr>
                </thead>
                <tbody>
                {data.map((item) => (
                        <tr class="odd:bg-gray-50">
                            <td class="px-4 py-3">{item.land}</td>
                            <td class="px-4 py-3">{item.unternehmen}</td>
                            <td class="px-4 py-3">{item.co2}</td>
                            <td class="px-4 py-3">{item.quelle}</td>
                        </tr>
                ))}
                </tbody>
            </table>
        </article>
    </main>
</Layout>
